# AI Marketing Platform Environment Configuration
# Copy this file to .env and update with your actual values

# Application Environment
NODE_ENV=development
FLASK_ENV=development
DEBUG=true

# Database Configuration
DATABASE_URL=postgresql://admin:password123@localhost:5432/ai_marketing
POSTGRES_DB=ai_marketing
POSTGRES_USER=admin
POSTGRES_PASSWORD=password123
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION=24h
JWT_REFRESH_EXPIRATION=7d

# API Keys - AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
COHERE_API_KEY=your-cohere-api-key
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Social Media API Keys
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Ad Platform API Keys
GOOGLE_ADS_DEVELOPER_TOKEN=your-google-ads-developer-token
GOOGLE_ADS_CLIENT_ID=your-google-ads-client-id
GOOGLE_ADS_CLIENT_SECRET=your-google-ads-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-google-ads-refresh-token

FACEBOOK_ADS_ACCESS_TOKEN=your-facebook-ads-access-token
FACEBOOK_ADS_APP_ID=your-facebook-ads-app-id
FACEBOOK_ADS_APP_SECRET=your-facebook-ads-app-secret

AMAZON_ADS_CLIENT_ID=your-amazon-ads-client-id
AMAZON_ADS_CLIENT_SECRET=your-amazon-ads-client-secret
AMAZON_ADS_REFRESH_TOKEN=your-amazon-ads-refresh-token

# CRM Integration
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_USERNAME=your-salesforce-username
SALESFORCE_PASSWORD=your-salesforce-password
SALESFORCE_SECURITY_TOKEN=your-salesforce-security-token

HUBSPOT_API_KEY=your-hubspot-api-key
PIPEDRIVE_API_KEY=your-pipedrive-api-key

# Analytics Platforms
GOOGLE_ANALYTICS_PROPERTY_ID=your-ga-property-id
GOOGLE_ANALYTICS_CREDENTIALS_PATH=path/to/ga-credentials.json

MIXPANEL_PROJECT_TOKEN=your-mixpanel-project-token
MIXPANEL_API_SECRET=your-mixpanel-api-secret

AMPLITUDE_API_KEY=your-amplitude-api-key
AMPLITUDE_SECRET_KEY=your-amplitude-secret-key

# Email Services
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Cloud Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_CREDENTIALS_PATH=path/to/gcp-credentials.json

AZURE_STORAGE_ACCOUNT_NAME=your-azure-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-azure-storage-key

# Message Queue
KAFKA_BROKERS=localhost:9092
KAFKA_GROUP_ID=ai-marketing-platform
KAFKA_AUTO_OFFSET_RESET=earliest

# WebSocket Configuration
WS_PORT=5000
WS_HOST=localhost

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Caching
CACHE_TTL=3600
CACHE_MAX_SIZE=1000

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
ELASTICSEARCH_URL=http://localhost:9200
KIBANA_URL=http://localhost:5601

# Security
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_CREDENTIALS=true
BCRYPT_ROUNDS=12

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key
ENCRYPTION_ALGORITHM=aes-256-gcm

# External Services
ZAPIER_WEBHOOK_URL=your-zapier-webhook-url
SLACK_WEBHOOK_URL=your-slack-webhook-url
DISCORD_WEBHOOK_URL=your-discord-webhook-url

# Development Tools
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true

# Production Settings (uncomment for production)
# NODE_ENV=production
# FLASK_ENV=production
# DEBUG=false
# LOG_LEVEL=info
# ENABLE_SWAGGER=false
# ENABLE_GRAPHIQL=false
